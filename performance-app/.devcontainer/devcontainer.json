{
    "name": "performance-app",
    "image": "mcr.microsoft.com/devcontainers/python:3.12",
    "runArgs": [
        "--name",
        "performance-app",
        "--network",
        "host"
    ],
    "features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
            "moby": "false"
        }
    },
    "containerEnv": {
        "MIGRATIONS_DIR": "${localWorkspaceFolder}/migrations",
        "POSTGRES_INIT_SQL_FILE": "${localWorkspaceFolder}/../docker/postgres/init.sql"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "files.autoSave": "onFocusChange",
                "[python]": {
                    "editor.defaultFormatter": "ms-python.autopep8"
                }
            }
        }
    },
    "postCreateCommand": "pip install ."
}
