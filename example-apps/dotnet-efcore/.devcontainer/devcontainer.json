{
    "name": "C# (.NET)",
    "image": "mcr.microsoft.com/devcontainers/dotnet:9.0",
    "features": {},
    "forwardPorts": [
        5000,
        5001
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csdevkit"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "files.autoSave": "onFocusChange"
            }
        }
    },
    "postCreateCommand": "dotnet tool install --global dotnet-ef"
}
