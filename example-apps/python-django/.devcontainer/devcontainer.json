{
    "name": "python-django",
    "image": "mcr.microsoft.com/devcontainers/python:3.12",
    "runArgs": ["--name", "python-django"],
    "forwardPorts": [
        8000
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "files.autoSave": "onFocusChange"
            }
        }
    },
    "postCreateCommand": "pip install -r requirements.txt"
}
